{% extends 'base.html.twig' %}

{% block title %}Les Comptes temporaires{% endblock %}

{% block body %}

<h1>Les comptes temporaires existants</h1>
<div class="container-fluid">
<table class="table table-striped table-bordered" id="sortTable">
<thead>
<tr>
<th>Etat</th>
<th>Soft</th>
<th>Fonction</th>
<th>Login</th>
<th>Mot de passe</th>
<th>Disponible</th>
<th>Par :</th>
<th>Pièce d'identité fournie</th>
</tr>
</thead>
<tbody>
{% for Comptes in Comptes %}
<tr>
<td>
{%if Comptes.IsCreated == 0 %}
<a href={{ path('changerStatut',{'id': Comptes.id} ) }}>a créer</a>
{% else %}
<a href="/changerStatut/{{Comptes.id}}">crée</a>

{% endif %}

</td>
<td>{{ Comptes.Soft.LibelleSoft }}</td>
<td>{{ Comptes.Fonction.LibelleFonction }}</td>
<td>{{ Comptes.Login }}</td>
<td>
{% if Comptes.IsUsed == 0 %}
{{ Comptes.Password }}
{% endif %}
</td>
<td>
{% if Comptes.IsUsed == 0 %}
<i class="fa-solid fa-square-check" style="color: #11a23c;"></i>
{% else %}
<i class="fa-solid fa-circle-xmark" style="color: #e01039;"></i>
{% endif %}
</td>
<td>
{% if Comptes.Agents is not null %}
{{ Comptes.Agents.Nom }} {{ Comptes.Agents.Prenom}}
{% endif %}
</td>
<td>
{% if Comptes.Agents is not null %}

    {% if Comptes.Agents.isPJ == 0 %}

    Non fournie
    {% else %}
        {% if Comptes.Agents.Documents is not null %}
            {% for doc in Comptes.Agents.Documents %}
            
                {% if Comptes.agents.id %}
                    <a href={{ path('voirDocument',{'doc': doc.id} ) }} target="_blank" style="color:black;"><i class="fa-solid fa-eye" style="color: #3471da;"></i></a>  
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endif %}
{% else %}
    N/A 
{% endif %}

</td>
</tr>
{% endfor %}
</tbody>
</table>
</div>

<script>
$('#sortTable').DataTable();
</script>
<div>
<a href='/Admin/showLastComptes'>Voir les 10 derniers comptes</a>

<a href='/Admin'>Retour</a>
</div>
{% endblock %}